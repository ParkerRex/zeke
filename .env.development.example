# Development Environment Configuration
# Copy this file to .env.development for local development optimizations

# Development Mode Flag
NODE_ENV=development

# Disable memory-intensive features in development
DEBUG=false
DISABLE_SENTRY=true
DISABLE_ARCJET=true
DISABLE_LOGTAIL=true

# Memory optimization flags
NEXT_DISABLE_SOURCEMAPS=true
NEXT_DISABLE_SWC_MINIFY=true
NEXT_REDUCE_MEMORY=true

# Turbopack optimizations
TURBOPACK_MEMORY_LIMIT=2048

# Disable analytics in development
DISABLE_ANALYTICS=true
DISABLE_POSTHOG=true

# Reduce logging verbosity
LOG_LEVEL=error

# Development-specific database settings
# Use smaller connection pools to reduce memory usage
DB_POOL_SIZE=2
WORKER_MAX_CLIENTS=2

# Disable external services that aren't needed for development
DISABLE_STRIPE_WEBHOOKS=true
DISABLE_EMAIL_SENDING=true

# Performance monitoring (disabled in development)
DISABLE_PERFORMANCE_MONITORING=true
