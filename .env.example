# =============================================================================
# Zeke Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in the actual values
# NEVER commit the .env file to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Node Environment
# -----------------------------------------------------------------------------
NODE_ENV=development # Options: development, production, test

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Primary database connection URL (PostgreSQL)
# For local Docker: postgresql://zeke:zeke_dev_password@localhost:5432/zeke
DATABASE_PRIMARY_URL=postgresql://zeke:zeke_dev_password@localhost:5432/zeke

# Optional: Database pooler URL for connection pooling
DATABASE_PRIMARY_POOLER_URL=

# PostgreSQL SSL mode
# Options: disable, no-verify, require
PGSSLMODE=disable

# Docker Postgres password
POSTGRES_PASSWORD=zeke_dev_password

# -----------------------------------------------------------------------------
# Authentication Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# Auth secret key for signing sessions and tokens (CRITICAL)
# Must be at least 32 characters - use a strong random string
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-auth-secret-key-at-least-32-characters-long

# Better Auth trusted origins (comma-separated)
AUTH_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# OAuth Providers (Configure as needed)
# -----------------------------------------------------------------------------
# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Apple OAuth
# Get from: https://developer.apple.com/account/resources/identifiers
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# -----------------------------------------------------------------------------
# Storage Configuration (MinIO - S3 Compatible)
# -----------------------------------------------------------------------------
# MinIO endpoint URL
MINIO_ENDPOINT=http://localhost:9000

# MinIO root credentials (also used as access key)
MINIO_ROOT_USER=zeke_minio
MINIO_ROOT_PASSWORD=zeke_minio_password

# MinIO access credentials for app
MINIO_ACCESS_KEY=zeke_minio
MINIO_SECRET_KEY=zeke_minio_password

# Storage bucket names
MINIO_BUCKET_VAULT=vault
MINIO_BUCKET_INBOX=inbox
MINIO_BUCKET_ASSETS=assets

# Public storage endpoint (for signed URLs)
NEXT_PUBLIC_STORAGE_URL=http://localhost:9000

# -----------------------------------------------------------------------------
# Realtime Configuration (WebSocket)
# -----------------------------------------------------------------------------
# WebSocket server URL for realtime subscriptions
NEXT_PUBLIC_REALTIME_WS_URL=ws://localhost:8080

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Public website URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Public app URL
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Public API URL
NEXT_PUBLIC_API_URL=http://localhost:3003

# -----------------------------------------------------------------------------
# OpenAI Configuration (REQUIRED for AI features)
# -----------------------------------------------------------------------------
# OpenAI API key for AI-powered features
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# -----------------------------------------------------------------------------
# Trigger.dev Configuration (REQUIRED for background jobs)
# -----------------------------------------------------------------------------
# Trigger.dev project ID
# Get from: https://cloud.trigger.dev
TRIGGER_PROJECT_ID=proj_...

# Trigger.dev secret key
TRIGGER_SECRET_KEY=tr_dev_...

# Optional Trigger.dev configuration
TRIGGER_API_KEY=
TRIGGER_SECRET=
TRIGGER_DEV_API_KEY=
TRIGGER_API_URL=
TRIGGER_ENDPOINT=
TRIGGER_WEBHOOK_SECRET=

# -----------------------------------------------------------------------------
# Redis Configuration (REQUIRED for caching)
# -----------------------------------------------------------------------------
# Redis connection URL
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# API Security (REQUIRED)
# -----------------------------------------------------------------------------
# API secret key for authentication (CRITICAL)
# Must be at least 32 characters - use a strong random string
API_SECRET_KEY=your-super-secret-api-key-at-least-32-characters-long

# Comma-separated list of allowed API origins for CORS
ALLOWED_API_ORIGINS=http://localhost:3000,http://localhost:3001

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the server to listen on
PORT=3003

# -----------------------------------------------------------------------------
# Stripe Configuration (Optional - for payments)
# -----------------------------------------------------------------------------
# Stripe secret key
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...

# Stripe webhook secret
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe publishable key (safe to expose in frontend)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# -----------------------------------------------------------------------------
# Email Services (Optional)
# -----------------------------------------------------------------------------
# Resend API key for sending emails
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_...

# -----------------------------------------------------------------------------
# Support/Feedback (Optional)
# -----------------------------------------------------------------------------
# Plain API key for support tickets
# Get from: https://plain.com
PLAIN_API_KEY=

# -----------------------------------------------------------------------------
# Monitoring (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
# Get from: https://sentry.io
NEXT_PUBLIC_SENTRY_DSN=

# -----------------------------------------------------------------------------
# YouTube API (Optional)
# -----------------------------------------------------------------------------
# YouTube Data API key
# Get from: https://console.cloud.google.com
YOUTUBE_API_KEY=

# YouTube quota management
YOUTUBE_QUOTA_LIMIT=0
YOUTUBE_QUOTA_RESET_HOUR=0
YOUTUBE_RATE_LIMIT_BUFFER=0

# -----------------------------------------------------------------------------
# Deployment (Optional - automatically set by platforms)
# -----------------------------------------------------------------------------
# Vercel environment (set automatically by Vercel)
VERCEL_ENV=development # Options: development, preview, production
VERCEL_URL=

# Fly.io region (set automatically by Fly.io)
FLY_REGION=
FLY_ALLOC_ID=

# -----------------------------------------------------------------------------
# Next.js Runtime (Optional - set automatically by Next.js)
# -----------------------------------------------------------------------------
NEXT_RUNTIME=nodejs # Options: nodejs, edge
