# ZEKE Production Environment Variables
# Copy this file to .env.production and fill in your production values
# WARNING: This file contains sensitive production credentials - never commit to version control

# =============================================================================
# SUPABASE CONFIGURATION (Production)
# =============================================================================

# Public Supabase Configuration (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL="https://hblelrtwdpukaymtpchv.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-supabase-anon-key-here"

# Server-side Supabase Configuration (SENSITIVE - Keep Secret)
SUPABASE_SERVICE_ROLE_KEY="your-production-supabase-service-role-key-here"
SUPABASE_JWT_SECRET="your-production-supabase-jwt-secret-here"

# Database Connection (Production - SENSITIVE)
DATABASE_URL="postgresql://postgres:your-db-password@db.hblelrtwdpukaymtpchv.supabase.co:5432/postgres"
WORKER_DB_PASSWORD="your-worker-database-password-here"

# =============================================================================
# APPLICATION URLS (Production)
# =============================================================================

# These will be populated automatically during deployment
NEXT_PUBLIC_APP_URL="https://your-main-app-domain.vercel.app"
NEXT_PUBLIC_WORKER_URL="https://your-worker-service.railway.app"
NEXT_PUBLIC_MARKETING_URL="https://your-marketing-site.vercel.app"

# =============================================================================
# AUTHENTICATION (Production)
# =============================================================================

NEXTAUTH_URL="https://your-main-app-domain.vercel.app"
NEXTAUTH_SECRET="your-production-nextauth-secret-key-minimum-32-characters"

# =============================================================================
# EXTERNAL API KEYS (Production - SENSITIVE)
# =============================================================================

# OpenAI API Key (Production key with appropriate limits)
OPENAI_API_KEY="sk-your-production-openai-api-key-here"

# Anthropic API Key (Production key with appropriate limits)
ANTHROPIC_API_KEY="sk-ant-your-production-anthropic-api-key-here"

# YouTube API Key (Production key with appropriate quotas)
YOUTUBE_API_KEY="your-production-youtube-api-key-here"

# Reddit API Credentials (Production app credentials)
REDDIT_CLIENT_ID="your-production-reddit-client-id"
REDDIT_CLIENT_SECRET="your-production-reddit-client-secret"

# =============================================================================
# WORKER CONFIGURATION (Production)
# =============================================================================

NODE_ENV="production"
PORT="8082"
WORKER_CONCURRENCY="5"
LOG_LEVEL="info"

# =============================================================================
# PRODUCTION FLAGS
# =============================================================================

# Environment validation (should be false in production)
SKIP_ENV_VALIDATION="false"

# Production mode flags
NEXT_PUBLIC_DEV_MODE="false"
NEXT_PUBLIC_DEBUG="false"

# =============================================================================
# PRODUCTION SERVICES (Optional)
# =============================================================================

# Stripe (Production keys - SENSITIVE)
STRIPE_PUBLISHABLE_KEY="pk_live_your-stripe-live-publishable-key"
STRIPE_SECRET_KEY="sk_live_your-stripe-live-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-live-webhook-secret"

# Email Service (Production)
RESEND_API_KEY="re_your-production-resend-api-key"

# Analytics (Production)
GOOGLE_ANALYTICS_ID="G-YOUR-PRODUCTION-GA-ID"

# Monitoring and Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="zeke-production"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated list)
CORS_ORIGINS="https://your-main-app-domain.vercel.app,https://your-marketing-site.vercel.app"

# Rate Limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# Session Configuration
SESSION_SECRET="your-session-secret-minimum-32-characters-long"
SESSION_MAX_AGE="86400000"

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
BUILD_ENV="production"
OPTIMIZE_IMAGES="true"
ENABLE_EXPERIMENTAL_FEATURES="false"

# CDN Configuration
CDN_URL="https://your-cdn-domain.com"
ASSET_PREFIX=""

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Log Level for different services
API_LOG_LEVEL="info"
WORKER_LOG_LEVEL="info"
DATABASE_LOG_LEVEL="warn"

# Health Check Configuration
HEALTH_CHECK_TIMEOUT="5000"
HEALTH_CHECK_INTERVAL="30000"

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING="true"
PERFORMANCE_SAMPLE_RATE="0.1"

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Recovery Configuration
RECOVERY_POINT_OBJECTIVE="1h"
RECOVERY_TIME_OBJECTIVE="4h"

# =============================================================================
# COMPLIANCE AND SECURITY
# =============================================================================

# Data Protection
GDPR_COMPLIANCE="true"
DATA_RETENTION_DAYS="365"
ANONYMIZE_LOGS="true"

# Security Headers
ENABLE_HSTS="true"
ENABLE_CSP="true"
ENABLE_REFERRER_POLICY="true"

# =============================================================================
# NOTES FOR PRODUCTION DEPLOYMENT
# =============================================================================

# 1. NEVER commit this file to version control
# 2. Store sensitive values in secure credential management systems
# 3. Use environment-specific API keys with appropriate rate limits
# 4. Regularly rotate secrets and API keys
# 5. Monitor API usage and costs
# 6. Set up alerting for service failures
# 7. Configure backup and disaster recovery procedures
# 8. Implement proper logging and monitoring
# 9. Use HTTPS for all external communications
# 10. Regularly audit and update security configurations

# =============================================================================
# REQUIRED ACTIONS BEFORE DEPLOYMENT
# =============================================================================

# [ ] Replace all placeholder values with actual production credentials
# [ ] Verify all API keys are production-ready with appropriate limits
# [ ] Test database connectivity with production credentials
# [ ] Confirm all URLs and domains are correct
# [ ] Set up monitoring and alerting for all services
# [ ] Configure backup and recovery procedures
# [ ] Review and update security configurations
# [ ] Test the complete deployment process in a staging environment
# [ ] Prepare rollback procedures and emergency contacts
# [ ] Document all configuration changes and deployment procedures
