# =============================================================================
# Zeke API Environment Variables
# =============================================================================
# These are the required environment variables for the API application
# See root .env.example for full documentation
# =============================================================================

# Node Environment
NODE_ENV=development

# Database (REQUIRED)
DATABASE_PRIMARY_URL=postgresql://user:password@host:port/database
DATABASE_PRIMARY_POOLER_URL=
PGSSLMODE=require

# Auth (REQUIRED)
AUTH_SECRET=your-super-secret-auth-secret-at-least-32-chars

# OpenAI (REQUIRED)
OPENAI_API_KEY=sk-proj-...

# Trigger.dev (REQUIRED)
TRIGGER_PROJECT_ID=proj_...
TRIGGER_SECRET_KEY=tr_dev_...
TRIGGER_API_KEY=
TRIGGER_SECRET=
TRIGGER_DEV_API_KEY=
TRIGGER_API_URL=
TRIGGER_ENDPOINT=

# Redis (REQUIRED)
REDIS_URL=redis://localhost:6379

# API Security
ALLOWED_API_ORIGINS=http://localhost:3000,http://localhost:3001

# Server
PORT=3003

# Email (optional)
RESEND_API_KEY=re_...

# Deployment (optional - auto-set by platform)
FLY_REGION=
FLY_ALLOC_ID=
