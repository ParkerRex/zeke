# =============================================================================
# Zeke API Environment Variables
# =============================================================================
# These are the required environment variables for the API application
# See root .env.example for full documentation
# =============================================================================

# Node Environment
NODE_ENV=development

# Database (REQUIRED)
DATABASE_PRIMARY_URL=postgresql://user:password@host:port/database
DATABASE_PRIMARY_POOLER_URL=
PGSSLMODE=require

# Supabase (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGci...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGci...
SUPABASE_JWT_SECRET=your-super-secret-jwt-secret-at-least-32-chars

# Legacy Supabase (optional)
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# OpenAI (REQUIRED)
OPENAI_API_KEY=sk-proj-...

# Trigger.dev (REQUIRED)
TRIGGER_PROJECT_ID=proj_...
TRIGGER_SECRET_KEY=tr_dev_...
TRIGGER_API_KEY=
TRIGGER_SECRET=
TRIGGER_DEV_API_KEY=
TRIGGER_API_URL=
TRIGGER_ENDPOINT=

# Redis (REQUIRED)
REDIS_URL=redis://localhost:6379

# API Security
ALLOWED_API_ORIGINS=http://localhost:3000,http://localhost:3001

# Server
PORT=3003

# Email (optional)
RESEND_API_KEY=re_...

# Deployment (optional - auto-set by platform)
FLY_REGION=
FLY_ALLOC_ID=
