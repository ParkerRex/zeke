# =============================================================================
# Zeke Dashboard Environment Variables
# =============================================================================
# These are the required environment variables for the Dashboard application
# See root .env.example for full documentation
# =============================================================================

# Node Environment
NODE_ENV=development

# Auth (REQUIRED)
AUTH_SECRET=your-super-secret-auth-secret-at-least-32-chars

# Application URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3003

# Stripe (optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Support (optional)
PLAIN_API_KEY=

# Monitoring (optional)
NEXT_PUBLIC_SENTRY_DSN=

# Deployment (optional - auto-set by platform)
VERCEL_ENV=development
VERCEL_URL=
NEXT_RUNTIME=nodejs
