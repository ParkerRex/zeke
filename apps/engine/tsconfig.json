{
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@engine/*": [
        "src/*"
      ]
    },
    "strict": true,
    "types": ["bun-types"],
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "allowJs": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".turbo",
    "**/*.test.ts",
    "**/*.spec.ts",
    "tasks"
  ]
}