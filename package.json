{
  "name": "zeke",
  "private": true,
  "workspaces": ["packages/*", "apps/*"],
  "scripts": {
    "build": "./scripts/build.sh",
    "clean": "git clean -xdf node_modules",
    "dev": "./scripts/start-all.sh",
    "stop": "./scripts/stop-all.sh",
    "dev:api": "./scripts/start-api.sh",
    "dev:dashboard": "./scripts/start-dashboard.sh",
    "dev:website": "./scripts/start-website.sh",
    "dev:desktop": "./scripts/start-desktop.sh",
    "redis:start": "./scripts/start-redis.sh",
    "redis:stop": "docker stop zeke-redis",
    "docker:build:local": "./scripts/containers.sh build local",
    "docker:up:local": "./scripts/containers.sh up local",
    "docker:down:local": "./scripts/containers.sh down local",
    "docker:logs:local": "./scripts/containers.sh logs local",
    "docker:build:staging": "./scripts/containers.sh build staging",
    "docker:deploy:staging": "./scripts/containers.sh deploy staging",
    "docker:build:prod": "./scripts/containers.sh build prod",
    "docker:deploy:prod": "./scripts/containers.sh deploy prod",
    "db:migrate": "cd packages/db && bun run migrate:dev",
    "db:migrate:prod": "cd packages/db && bun run migrate",
    "db:studio": "cd packages/db && bun run migrate:studio",
    "format": "biome format --write .",
    "lint": "biome lint . && manypkg check",
    "typecheck": "cd apps/api && bun run typecheck && cd ../dashboard && bun run typecheck && cd ../website && bun run typecheck"
  },
  "dependencies": {
    "@biomejs/biome": "2.3.10",
    "@manypkg/cli": "^0.25.1",
    "baseline-browser-mapping": "^2.9.11",
    "caniuse-lite": "^1.0.30001762",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.5",
  "devDependencies": {
    "bun-types": "^1.3.5"
  },
  "overrides": {
    "drizzle-orm": "0.44.6"
  }
}
