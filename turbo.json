{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [
		"**/.env",
		"**/.env.local",
		"**/.env.production",
		"**/.env.development"
	],
	"ui": "stream",
	"tasks": {
		"topo": {
			"dependsOn": ["^topo"]
		},
		"build": {
			"env": [
				"SUPABASE_SERVICE_KEY",
				"NEXT_PUBLIC_SUPABASE_URL",
				"NEXT_PUBLIC_SUPABASE_ANON_KEY",
				"OPENAI_API_KEY",
				"YOUTUBE_API_KEY",
				"RESEND_API_KEY",
				"STRIPE_SECRET_KEY",
				"STRIPE_WEBHOOK_SECRET",
				"NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY",
				"POSTHOG_API_KEY",
				"NEXT_PUBLIC_POSTHOG_KEY",
				"NEXT_PUBLIC_POSTHOG_HOST",
				"SENTRY_AUTH_TOKEN",
				"NEXT_PUBLIC_SENTRY_DSN",
				"SENTRY_ORG",
				"SENTRY_PROJECT",
				"VERCEL_URL",
				"NODE_ENV"
			],
			"inputs": [
				"$TURBO_DEFAULT$",
				".env",
				".env.local",
				".env.production",
				".env.development"
			],
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "next-env.d.ts", ".expo/**"]
		},
		"start": {
			"cache": false
		},
		"test": {
			"cache": false
		},
		"dev": {
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local", ".env.development"],
			"persistent": true,
			"cache": false
		},
		"jobs": {
			"persistent": true,
			"cache": false
		},
		"format": {},
		"lint": {
			"dependsOn": ["^topo"]
		},
		"typecheck": {
			"dependsOn": ["^topo"],
			"outputs": ["node_modules/.cache/tsbuildinfo.json"]
		}
	}
}
