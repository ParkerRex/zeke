# Worker service environment (example)

# Connection (local Supabase default):
# Create role via migrations (no password). Then set password with psql using WORKER_DB_PASSWORD.
WORKER_DB_PASSWORD=change_me
DATABASE_URL=postgresql://worker:${WORKER_DB_PASSWORD}@127.0.0.1:54322/postgres
BOSS_SCHEMA=pgboss
BOSS_CRON_TZ=UTC
BOSS_MIGRATE=true

# OpenAI, YouTube, etc.
OPENAI_API_KEY=
YOUTUBE_API_KEY=
YOUTUBE_QUOTA_LIMIT=10000
YOUTUBE_QUOTA_RESET_HOUR=0
YOUTUBE_RATE_LIMIT_BUFFER=500

# Cloud Run / Remote (example, replace <project-ref>, <region>)
# DATABASE_URL=postgresql://worker.<project-ref>:${WORKER_DB_PASSWORD}@<region>.pooler.supabase.com:5432/postgres?sslmode=no-verify
BOSS_MIGRATE=false

