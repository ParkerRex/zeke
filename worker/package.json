{
  "name": "zeke-worker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/worker.js",
    "dev": "tsx watch src/worker.ts",
    "dev:docker": "bash scripts/dev-local.sh",
    "deploy:prod": "bash scripts/deploy-prod-worker.sh",
    "lint": "tsc --noEmit",
